<div class="container">
  <div class="jumbotron">

    <div class="row">
      <div class="col">
        <h1>Burger Monster!</h1>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <h2>Burgers available to devour!</h2>
        <ul>
          {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
        </ul>
      </div>
      <div class="col">
        <h2>Burgers that have been devoured!</h2>
        <ul>
          {{#each burgers}} {{#if devoured}} {{> burgerss/burger-block devoured=false}} {{/if}} {{/each}}
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="burg">burger Name:</label>
            <input type="text" id="burg" name="name">
          </div>
          <button type="submit">Add Burger</button>
        </form>
      </div>
    </div>
    
  </div>
</div>