<div class="container">
  <div class="jumbotron">

    <div class="row">
      <div class="col">
        <h1>Burger Monster</h1>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <h2>Choose a Burger to feed to the Burger Monster:</h2>
        {{#each burgers}} {{#unless devoured}}
        <button class="devour-button btn btn-light btn-lg" data-id="{{id}}">
          {{burger_name}}
        </button>
        {{/unless}} {{/each}}
      </div>
      <div class="col">
        <h2>Already devoured:</h2>
        {{#each burgers}} {{#if devoured}}
        <div class="eaten-burger text-center">
          <p>
            {{burger_name}}
          </p>
        </div>
        {{/if}} {{/each}}
      </div>
    </div>

    <div class="row">
      <div class="col">
        <h2>Add your own burger to feed the Burger Monster:</h2>
        <form class="create-form text-center">
          <div class="form-group">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burger-input" name="name">
          </div>
          <button class="btn btn-lg btn-danger" type="submit">Add Burger</button>
        </form>
      </div>
    </div>

  </div>
</div>

    <footer class="footer">
        <div class="container">
            <p class="footer-text text-center">
                <a target="_blank" href="/api/burgers">Burgers API</a> |
                <a target="_blank" href="https://github.com/hankzimmer7/Burger-Monster">GitHub Repo</a>
            </p>
        </div>
    </footer>

