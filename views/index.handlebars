<div class="container">
  <div class="jumbotron">

    <div class="row">
      <div class="col">
        <h1>Burger Monster</h1>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <h2>Choose a Burger to feed to the Burger Monster:</h2>
        <ul>
          {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=0}} {{/unless}} {{/each}}
        </ul>
      </div>
      <div class="col">
        <h2>Already devoured:</h2>
        <ul>
          {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=1}} {{/if}} {{/each}}
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burger-input" name="name">
          </div>
          <button type="submit">Add Burger</button>
        </form>
      </div>
    </div>
    
  </div>
</div>